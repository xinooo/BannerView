<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:orientation="vertical">

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:indicatorDrawable="@drawable/banner_indicator_yellow"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_2"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                app:loopPlay="false"
                app:bannerRadius="10dp"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_3"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_4"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_5"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_6"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                app:pagePaddingHorizontal="30dp"/>

            <com.xinooo.bannerlib.BannerView
                android:id="@+id/banner_7"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                app:pageLimit="2"
                app:pagePaddingVertical="20dp"
                app:pagePaddingEnd="25dp"/>

        </LinearLayout>

    </ScrollView>

</layout>